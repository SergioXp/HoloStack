{
  "name": "holostack",
  "version": "1.1.2",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/SergioXp/HoloStack.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "dist": "rm -rf dist .next && npm run db:check && npm run build && npx electron-rebuild -v 33.2.1 --force --module-dir=. --types=prod,dev,optional --only=better-sqlite3,sharp --build-from-source && npm run build:electron && npm run rebuild:standalone && electron-builder",
    "rebuild": "npx electron-rebuild -v 33.2.1 --build-from-source",
    "rebuild:standalone": "node scripts/rebuild-standalone.js",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run build:electron && cross-env NODE_ENV=development electron .\"",
    "start": "next start",
    "start:clean": "npm run build:electron && cross-env NODE_ENV=development electron . --user-data-dir=./.temp-data",
    "db:generate": "drizzle-kit generate",
    "db:check": "drizzle-kit check",
    "lint": "eslint",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "release": "node scripts/release.mjs"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tailwindcss/typography": "^0.5.19",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.562.0",
    "next": "^16.1.6",
    "next-auth": "^5.0.0-beta.30",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "recharts": "^3.6.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.8",
    "electron": "33.2.1",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "jsdom": "^27.4.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.16"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.sergiogonzalez.holostack",
    "productName": "HoloStack",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "dist-electron/**/*",
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      "drizzle/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.collector",
      "icon": "public/icon.png"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "extraResources": [],
    "npmRebuild": false,
    "asarUnpack": [
      ".next/standalone/**/*",
      "**/node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "SergioXp",
        "repo": "HoloStack",
        "releaseType": "release"
      }
    ]
  }
}